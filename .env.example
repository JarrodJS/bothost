# BotHost Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# Next.js
# ===================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET= # Generate with: openssl rand -base64 32

# ===================
# Database
# ===================
DATABASE_URL=postgresql://user:password@localhost:5432/bothost

# ===================
# OAuth Providers
# ===================

# Discord OAuth - https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET= # For GitHub webhooks (auto-deploy)

# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================
# Coolify Integration
# ===================
COOLIFY_API_URL=http://coolify:8080
COOLIFY_API_TOKEN= # Generate in Coolify UI under Settings > API Tokens
COOLIFY_PROJECT_UUID= # Your BotHost project UUID in Coolify
COOLIFY_SERVER_UUID= # Your server UUID in Coolify

# ===================
# Stripe Billing
# ===================
STRIPE_SECRET_KEY= # sk_live_... or sk_test_...
STRIPE_WEBHOOK_SECRET= # whsec_...
STRIPE_HOBBY_PRICE_ID= # price_...
STRIPE_PRO_PRICE_ID= # price_...
STRIPE_ENTERPRISE_PRICE_ID= # price_...

# ===================
# Security
# ===================
ENCRYPTION_KEY= # Generate with: openssl rand -hex 32
