generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // BotHost specific
  subscription   Subscription?
  bots           Bot[]
  githubToken    String?       // Encrypted GitHub access token

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Subscription tiers
enum SubscriptionTier {
  FREE
  HOBBY
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  tier                 SubscriptionTier   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)

  // Stripe fields
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?

  // Billing dates
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Bot platform types
enum BotPlatform {
  DISCORD
  TELEGRAM
}

// Bot deployment sources
enum DeploymentSource {
  GITHUB
  UPLOAD
  TEMPLATE
}

// Bot runtime
enum BotRuntime {
  NODEJS_20
  NODEJS_18
  PYTHON_311
  PYTHON_310
}

// Bot status
enum BotStatus {
  RUNNING
  STOPPED
  DEPLOYING
  FAILED
  BUILDING
}

model Bot {
  id          String           @id @default(cuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String
  description String?
  platform    BotPlatform
  runtime     BotRuntime       @default(NODEJS_20)
  status      BotStatus        @default(STOPPED)

  // Deployment source
  source      DeploymentSource

  // GitHub source (if source = GITHUB)
  githubRepo      String?      // owner/repo format
  githubBranch    String?      @default("main")
  githubWebhookId String?

  // Template source (if source = TEMPLATE)
  templateId      String?
  template        BotTemplate? @relation(fields: [templateId], references: [id])

  // Coolify integration
  coolifyAppUuid    String?    @unique
  coolifyServiceId  String?

  // Resource limits
  memoryLimit       Int        @default(128) // MB
  cpuLimit          Float      @default(0.25) // CPU cores

  // Environment variables (stored separately for encryption)
  envVars           BotEnvVar[]

  // Deployments history
  deployments       Deployment[]

  // Metrics
  lastStartedAt     DateTime?
  lastDeployedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model BotEnvVar {
  id       String  @id @default(cuid())
  botId    String
  bot      Bot     @relation(fields: [botId], references: [id], onDelete: Cascade)

  key      String
  value    String // Encrypted value

  // For sensitive vars like tokens, we store them differently
  isSecret Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([botId, key])
  @@index([botId])
}

enum DeploymentStatus {
  PENDING
  BUILDING
  DEPLOYING
  SUCCESS
  FAILED
  CANCELED
}

model Deployment {
  id        String           @id @default(cuid())
  botId     String
  bot       Bot              @relation(fields: [botId], references: [id], onDelete: Cascade)

  status    DeploymentStatus @default(PENDING)

  // Source info
  commitSha     String?
  commitMessage String?

  // Build logs
  logs          String?

  // Timing
  startedAt     DateTime?
  finishedAt    DateTime?

  createdAt DateTime @default(now())

  @@index([botId])
}

model BotTemplate {
  id          String      @id @default(cuid())

  name        String
  description String
  platform    BotPlatform
  runtime     BotRuntime

  // Template source
  sourceUrl   String      // GitHub URL or internal reference

  // Default config (JSON string)
  defaultEnvVars String?    // JSON array of { key, description, required }

  // Usage
  usageCount  Int         @default(0)
  bots        Bot[]

  isPublic    Boolean     @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
